<main>
  {{#if cube}}
  {{#with cube}}
  <h1>{{name}}</h1>
  <img class="cube" src={{imageUrl}}>
  <div class="details">
    <p><span>Description:</span>{{description}}</p>
    <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/accessory/{{_id}}/attachAccessory">Attach Accessory</a>
    <a class="btn" href="/details/{{_id}}/edit">Edit</a>
    <a class="btn" href="/details/{{_id}}/delete">Delete</a>
  </div>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#if accessories}}
    {{#each accessories}}
    {{>accessoryCard}}
    {{/each}}
    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/if}}
  </div>
  {{/with}}
  {{else}}
  <p>The wanted cube is not here :(</p>
  {{/if}}
</main>